<h1>Books</h1>
 <table>
 	<tr>
 	  <th>Title</th>
 	  <th>Body</th>
 	</tr>

 	<% @books.each do |book| %>
 	<tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you Sure?"%></td>
    </tr>
   <% end %>
 </table>

<h2>New book</h2>
  <%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages' %>
  <h4>Title</h4>
	<%= f.text_field :title %>
  <h4>Body</h4>
	<%= f.text_area :body %>
  <div class="action">
	<%= f.submit 'Create Book' %>
  </div>
  
<% end %>


